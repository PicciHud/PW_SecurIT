@page
@model SecurITPW.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Utenti</h1>

<!-- Solo gli amministratori possono creare una stanza nuova -->
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-page="Create">Create new user</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].IdUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].SurName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <!-- Solo gli amministratori possono creare una stanza nuova -->
            @if (User.IsInRole("Admin"))
            {
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
