@page
@model SecurITPW.Pages.Codes.NomePaginaModel
@{
    ViewData["Title"] = "Index";
}

<style>
    .custom-input {
        width: 200px; /* Imposta la larghezza desiderata */
        margin-left: auto; /* Imposta distanza dal bordo sinistro (perchè "text-center" non c'entra anche le caselle di testo e non sapevo come altro allinearle*/
        margin-right: auto; /* Imposta distanza dal bordo destro (perchè "text-center" non c'entra anche le caselle di testo e non sapevo come altro allinearle*/
    }
</style>

<h1>Accesso stanza</h1>

<div class="text-center">
    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <p>@TempData["Message"]</p>
    }

    <form method="post">
        <div class="form-group">
            <label for="codeInput">Codice PIC:</label>
            <input type="text" id="codeInput" name="Code" class="form-control custom-input" />
            <!-- Aggiungiamo la classe CSS "custom-input" alla casella di testo -->
        </div>
        <button type="submit" class="btn btn-primary">Invia</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.SecondCode))
    {
        <div class="mt-3">
            <label for="secondCodeInput">Codice da inserire:</label>
            <input type="text" id="secondCodeInput" class="form-control custom-input" value="@Model.SecondCode" readonly />
            <!-- Anche per il secondo codice, applichiamo la classe CSS "custom-input" -->
        </div>
    }
</div>
